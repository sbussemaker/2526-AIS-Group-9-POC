@prefix ecom: <http://example.org/ecommerce#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Classes
ecom:Customer a rdfs:Class ;
    rdfs:label "Customer" ;
    rdfs:comment "A customer in the e-commerce system" .

ecom:Order a rdfs:Class ;
    rdfs:label "Order" ;
    rdfs:comment "An order placed by a customer" .

ecom:Product a rdfs:Class ;
    rdfs:label "Product" ;
    rdfs:comment "A product available for purchase" .

ecom:OrderItem a rdfs:Class ;
    rdfs:label "Order Item" ;
    rdfs:comment "An item within an order" .

# Properties
ecom:customerId a rdf:Property ;
    rdfs:label "customer ID" ;
    rdfs:domain ecom:Customer ;
    rdfs:range xsd:string .

ecom:customerName a rdf:Property ;
    rdfs:label "customer name" ;
    rdfs:domain ecom:Customer ;
    rdfs:range xsd:string .

ecom:customerEmail a rdf:Property ;
    rdfs:label "customer email" ;
    rdfs:domain ecom:Customer ;
    rdfs:range xsd:string .

ecom:orderId a rdf:Property ;
    rdfs:label "order ID" ;
    rdfs:domain ecom:Order ;
    rdfs:range xsd:string .

ecom:orderDate a rdf:Property ;
    rdfs:label "order date" ;
    rdfs:domain ecom:Order ;
    rdfs:range xsd:dateTime .

ecom:orderTotal a rdf:Property ;
    rdfs:label "order total" ;
    rdfs:domain ecom:Order ;
    rdfs:range xsd:decimal .

ecom:placedBy a rdf:Property ;
    rdfs:label "placed by" ;
    rdfs:domain ecom:Order ;
    rdfs:range ecom:Customer .

ecom:hasItem a rdf:Property ;
    rdfs:label "has item" ;
    rdfs:domain ecom:Order ;
    rdfs:range ecom:OrderItem .

ecom:productId a rdf:Property ;
    rdfs:label "product ID" ;
    rdfs:domain ecom:Product ;
    rdfs:range xsd:string .

ecom:productName a rdf:Property ;
    rdfs:label "product name" ;
    rdfs:domain ecom:Product ;
    rdfs:range xsd:string .

ecom:productPrice a rdf:Property ;
    rdfs:label "product price" ;
    rdfs:domain ecom:Product ;
    rdfs:range xsd:decimal .
